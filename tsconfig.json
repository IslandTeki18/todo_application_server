{
    "compilerOptions": {
      "baseUrl": ".",
      "rootDir": "src",
      "paths": {
        "~*": ["./*"]
      },
      "outDir": "build/dist",
      "module": "commonjs",
      "target": "es5",
      "lib": ["es6", "dom"],
      "sourceMap": true,
      "allowJs": true,
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "esModuleInterop": true
    },
    
    "types": [
      "typePatches"
    ]
  }